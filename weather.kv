<WeatherLayout>:
    orientation: 'vertical'
    padding: 10

    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # Background color (e.g., gray)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: city_label
        text: 'Enter City Name:'
        font_size: 20

    TextInput:
        id: city_input
        multiline: False
        font_size: 20

    Button:
        text: 'Get Weather'
        font_size: 20
        background_color: 0, 0.5, 1, 1  # Button color (e.g., blue)
        on_press: app.get_weather()

    Label:
        id: weather_label
        text: ''
        font_size: 20
